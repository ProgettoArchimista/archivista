<% if collection.present? %>
  <h2><%= t('linked_creators')%></h2>
  <ul>
  <% collection.each do |creator| %>
    <li>
<%# Upgrade 3.0.0 inizio %>
    <% if creator.related_creator.published == true %>
        (<%= creator.creator_association_type ? creator.creator_association_type.association_type : "qualifica non presente" %>)
        <%= link_to creator.related_creator.preferred_name.name, current_context_object_path(creator.related_creator) %>
        <%= creator.related_creator.preferred_event.full_display_date if creator.related_creator.preferred_event %>
      <% else %>
        (<%= creator.creator_association_type ? creator.creator_association_type.association_type : "qualifica non presente" %>)
        <%= creator.related_creator.preferred_name.name %>
        <%= creator.related_creator.preferred_event.full_display_date if creator.related_creator.preferred_event %>
      <% end %>
<%# Upgrade 3.0.0 fine %>  
    </li>
  <% end %>
  </ul>
<% end %>
